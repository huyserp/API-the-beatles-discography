<div>
  <h1>The Beatles</h1>
  <h2>Complete studio album API</h2>
  <% unless user_signed_in? %>
    <p>
      <%= link_to 'Login', new_user_session_path %>
      or
      <%= link_to 'Sign Up', new_user_registration_path  %>
      to have full access.
    </p>
  <% else %>
    <p>hello <%= current_user.email.split('@').first %>,
      your API Key is:</p>
    <p><%= current_user.authentication_token %></p>
    <%= link_to "Log out", destroy_user_session_path, method: :delete %>
  <% end %>
</div>

